@using SnailbirdHome.Services
@inject ReconnectBehavior ReconnectBehavior

<Router AppAssembly="typeof(Program).Assembly"
        NotFoundPage="typeof(Pages._404_)"
        OnNavigateAsync="OnNavigateAsync">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)" />
    </Found>
</Router>

@code {
    private Task OnNavigateAsync(Microsoft.AspNetCore.Components.Routing.NavigationContext context)
    {
        // Reset to default mode on every navigation
        // Pages that want a different mode will set it in their OnInitialized
        ReconnectBehavior.Reset();
        return Task.CompletedTask;
    }
}